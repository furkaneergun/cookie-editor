class Animate{static toggleSlide(t,e=null){let i=0,s=this;if(t.style.display="flex",t.addEventListener("transitionend",function(){e&&e(),s.isHidden(t)&&(t.style.display="none"),document.body.style.height="100%",setTimeout(function(){document.body.style.height=""},10)},{once:!0}),t.getAttribute("data-max-height"))this.isHidden(t)?setTimeout(function(){t.style.maxHeight=t.getAttribute("data-max-height")},10):(i=this.getHeight(t)+"px",t.setAttribute("data-max-height",i),t.style.maxHeight="0");else{var l;i=this.getHeight(t)+"px",t.style.transition="max-height 0.25s ease-in-out",t.style.overflowY="hidden",t.setAttribute("data-max-height",i),t.offsetHeight>0?(l=0,t.style.maxHeight=i):(l=i,t.style.maxHeight=0),setTimeout(function(){t.style.maxHeight=l},10)}}static resizeSlide(t,e=null){e&&t.addEventListener("transitionend",function(){e()},{once:!0});let i=this.getHeight(t,!0)+"px";t.style.transition="max-height 0.25s ease-in-out",t.style.overflowY="hidden",t.setAttribute("data-max-height",i);var s=i;t.style.maxHeight=t.offsetHeight,setTimeout(function(){t.style.maxHeight=s},10)}static transitionPage(t,e,i,s="left",l=null){let a="0.3s";if(t.addEventListener("transitionend",()=>{t.style.maxHeight="",t.style.transition="",t.style.display="",t.style.width="",t.style.transform="",t.style.overflowY="auto",e&&e.remove(),l()},{passive:!0,once:!0}),t.style.overflowY="hidden",t.style.width="200%",t.style.display="flex",e&&(e.style.flex="0 0 50%"),i.style.flex="0 0 50%","left"===s?t.appendChild(i):t.insertBefore(i,t.firstChild),window.isPopup){let n=this.getHeight(i),o=e?this.getHeight(e):0;t.style.maxHeight=o+"px",n>400&&(n=400),setTimeout(()=>{var e=`max-height ${a} ease-in-out`;t.style.transition&&(e=", "+e),t.style.transition+=e,setTimeout(()=>{t.style.maxHeight=n+"px"},1)},1)}if("left"===s){var r=`transform ${a} ease-in-out`;t.style.transition&&(r=", "+r),t.style.transition+=r,setTimeout(()=>{t.style.transform="translateX(-50%)"},10)}else t.style.transform="translateX(-50%)",set